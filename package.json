{
  "name": "goxel-daemon-client",
  "version": "14.0.0",
  "description": "TypeScript client library for Goxel v14.0 daemon architecture",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:connection-pool": "jest tests/daemon_client_pool.test.ts",
    "test:health-monitoring": "jest tests/health_monitor.test.ts",
    "test:client": "jest tests/daemon_client.test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "dev": "ts-node src/examples/client_demo.ts",
    "demo:pool": "ts-node src/examples/pool_demo.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "goxel",
    "voxel",
    "3d",
    "daemon",
    "client",
    "typescript",
    "unix-socket",
    "json-rpc"
  ],
  "author": "Goxel Development Team",
  "license": "GPL-3.0",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guillaumechereau/goxel.git"
  },
  "bugs": {
    "url": "https://github.com/guillaumechereau/goxel/issues"
  },
  "homepage": "https://goxel.xyz"
}