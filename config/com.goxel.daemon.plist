<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.goxel.daemon</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/goxel-daemon</string>
        <string>--foreground</string>
        <string>--pid-file</string>
        <string>/usr/local/var/run/goxel-daemon.pid</string>
        <string>--socket</string>
        <string>/usr/local/var/run/goxel-daemon.sock</string>
        <string>--log-file</string>
        <string>/usr/local/var/log/goxel-daemon.log</string>
        <string>--workers</string>
        <string>4</string>
        <string>--queue-size</string>
        <string>1024</string>
        <string>--max-connections</string>
        <string>256</string>
    </array>
    
    <key>UserName</key>
    <string>_goxel</string>
    
    <key>GroupName</key>
    <string>_goxel</string>
    
    <key>WorkingDirectory</key>
    <string>/usr/local/var/lib/goxel</string>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
    </dict>
    
    <key>ThrottleInterval</key>
    <integer>5</integer>
    
    <key>StandardOutPath</key>
    <string>/usr/local/var/log/goxel-daemon.stdout</string>
    
    <key>StandardErrorPath</key>
    <string>/usr/local/var/log/goxel-daemon.stderr</string>
    
    <key>SoftResourceLimits</key>
    <dict>
        <key>NumberOfFiles</key>
        <integer>65536</integer>
        <key>NumberOfProcesses</key>
        <integer>4096</integer>
    </dict>
    
    <key>HardResourceLimits</key>
    <dict>
        <key>NumberOfFiles</key>
        <integer>65536</integer>
        <key>NumberOfProcesses</key>
        <integer>4096</integer>
    </dict>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin</string>
        <key>GOXEL_DAEMON_MODE</key>
        <string>production</string>
    </dict>
    
    <key>Sockets</key>
    <dict>
        <key>Listeners</key>
        <dict>
            <key>SockServiceName</key>
            <string>goxel-daemon</string>
            <key>SockType</key>
            <string>stream</string>
            <key>SockFamily</key>
            <string>Unix</string>
            <key>SockPathName</key>
            <string>/usr/local/var/run/goxel-daemon.sock</string>
            <key>SockPathMode</key>
            <integer>432</integer>
        </dict>
    </dict>
</dict>
</plist>